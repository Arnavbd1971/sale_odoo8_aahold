<?xml version="1.0" encoding="utf-8"?>
<openerp>
<data>
<template id="report_saleorder_document">

    
    <t t-call="report.external_layout">
        <div class="page" style='' >
            <div class="oe_structure"/>

            <div t-if='o.report_paper_format_id.name'>
                <div t-if='o.report_paper_format_id.head_office_addr'>
                    <div class="row" style=' border-bottom:1px solid #000;'>
                        <div class="col-xs-4" style='margin:0px !important; color:#fff;'>
                            <h2 style='text-align:center;'><span t-field='o.report_paper_format_id.name'/></h2>
                        </div>
                        <div class="col-xs-8 text-right" style='margin:0px !important;  color:#fff;'>
                            <p style='padding-top:28px!important;' t-if='o.report_paper_format_id.head_office_addr'>Head Office: <span t-field='o.report_paper_format_id.head_office_addr'/></p>
                        </div>
                    </div>
                </div>
            </div>

            

            <div t-if='o.report_paper_format_id.name == "None" '>
                <div class="row" style='margin-top:110px;'></div>
            </div>
            <div class='row'>
                <div class="col-xs-6">
                    <h1 t-if="o.partner_shipping_id == o.partner_invoice_id">Proforma Invoice</h1>
                    <h1 t-if="o.partner_shipping_id != o.partner_invoice_id">Invoice Address</h1>
                    <h5 style='font-weight:bold;'>Buyer </h5>
                    <h4 t-field ='o.partner_invoice_id.name'> </h4>
                    <span t-field ='o.partner_invoice_id.street'/>
                    <span t-field ='o.partner_invoice_id.city'/>
                    <span t-field ='o.partner_invoice_id.zip'/>
                    <span t-field ='o.partner_invoice_id.country_id.name'/>
                    <p t-field ='o.partner_invoice_id.phone'/>
                    <p t-if="o.partner_id.vat">VAT: <span t-field="o.partner_id.vat"/></p>
                    <div t-if="o.partner_shipping_id != o.partner_invoice_id" class="mt8">
                        <strong>Shipping address:</strong>
                        <div t-field="o.partner_shipping_id" 
                            t-field-options='{"widget": "contact", "fields": ["address", "name", "phone", "fax"], "no_marker": true}'/>
                        <p t-if="o.partner_id.vat">VAT: <span t-field="o.partner_id.vat"/></p>
                    </div>                    
                </div>
                <div class="col-xs-5 col-xs-offset-1">
                    <div class="col-xs-3" style='margin-top:23px;'>
                        <p t-if="o.state not in ['draft','sent']">P/I. No.</p>    
                        <p t-if="o.state in ['draft','sent']">Qut. No.</p>    
                    </div>    
                    <div class="col-xs-9" style='margin-top:23px;'>
                        <p> : &#8194;<span t-field="o.name"/></p>    
                    </div>
                    
                    <div class="col-xs-3">
                        <p>Date</p>    
                    </div>    
                    <div class="col-xs-9">
                        <p> : &#8194;<span t-field="o.date_order"/></p>    
                    </div> 

                    <div class="col-xs-3">
                        <p>Validity</p>    
                    </div>    
                    <div class="col-xs-9">
                        <p> : &#8194;<span t-field="o.validity_date"/></p>    
                    </div> 
                </div>
            </div>
            <div class="row" style='margin-top:10px;'>
                <div class="col-xs-12">
                    <table class="table ">
                        <thead>
                            <tr style=''>
                                <th class='' style='background-color:#000!important;border-right:2px solid #fff;color:#fff!important;padding-left:25px;'>Product</th>
                                <th class="text-center" style='background-color:#000!important;border-right:2px solid #fff;color:#fff!important;'>Unit Price</th>
                                <th class="text-center" style='background-color:#000!important;border-right:2px solid #fff;color:#fff!important;'>Quantity</th>
                                <th class="text-right" style='background-color:#000!important;border-right:2px solid #fff;color:#fff!important;'>Total Price</th>
                            </tr>
                        </thead>
                        <tbody class="sale_tbody">
                            <tr t-foreach="o.order_line" t-as="l">
                                <td>
                                    <span t-field="l.name" style='font-size:12px!important;'/>
                                </td>

                                <td class="text-right">
                                    <span t-field="l.price_unit"/>
                                </td>

                                <td class="text-right">
                                    <span t-field="l.product_uom_qty"/>
                                    <span groups="product.group_uom" t-field="l.product_uom"/>
                                </td>

                                <td class="text-right">
                                    <span t-field="l.price_subtotal"
                                        t-field-options='{"widget": "monetary", "display_currency": "o.pricelist_id.currency_id"}'/>
                                </td>
                            </tr>
                            <tr>
                                <td style='background-color:#000!important; padding:4px;'></td>
                                <td style='background-color:#000!important; padding:4px;'></td>
                                <td style='background-color:#000!important; padding:4px;'></td>
                                <td style='background-color:#000!important; padding:4px;'></td>
                            </tr>
                            <tr>
                                <td  class="text-left" style='font-size:15px;font-weight:bold;'>Total</td>
                                <td class="text-right" colspan="2">
                                    <span t-field="o.quantity_total" style='font-size:15px;font-weight:bold;'/>
                                    <span t-field="o.unity_of_mesure2" style='font-size:15px;font-weight:bold;'/>
                                </td>
                                <td class="text-right">
                                        <span style='font-size:17px;font-weight:bold;' t-field="o.amount_total"
                                        t-field-options='{"widget": "monetary", "display_currency": "o.pricelist_id.currency_id"}'/>
                                </td>
                                
                            </tr>
                            <tr>
                                <td colspan="4" class='text-right' style='font-size:15px;font-weight:bold;' >( <span t-esc="o.compute_text()" /> only )</td>
                            </tr>
                        </tbody>
                    </table>
                    

                </div>
            </div>


            <div class="row" style=' '> 
                <div class="col-xs-6" style='padding-right:0px!important;'>
                    <h4 style='font-weight:bold;'>Payment Details</h4>

                        <div class="col-xs-5"  style='padding-left:0px!important;'>
                            Beneficiary Full Name :
                        </div>

                        <div class="col-xs-7"  style='padding-left:0px!important;'>
                             <span style='font-weight:bold;' t-field="o.company_id"/>
                        </div>

                        <div class="col-xs-5"  style='padding-left:0px!important;'>
                                ERC No :
                        </div>
    
                        <div class="col-xs-7"  style='padding-left:0px!important;'>
                            <span style='font-weight:bold;' t-field="o.erc_no"/>
                        </div>

                        <div class="col-xs-5"  style='padding-left:0px!important;'>
                                Method of Payment :
                        </div>
    
                        <div class="col-xs-7"  style='padding-left:0px!important;'>
                            <span style='font-weight:bold;' t-field="o.method_of_payment"/>
                        </div>

                        <div class="col-xs-5"  style='padding-left:0px!important;'>
                                Reimbursement :
                        </div>
    
                        <div class="col-xs-7"  style='padding-left:0px!important;'>
                             <span style='font-weight:bold;' t-field="o.reimbursement"/>
                        </div>

                        <div class="col-xs-5"  style='padding-left:0px!important;'>
                                Beneficiary Bank and Branch :
                        </div>
    
                        <div class="col-xs-7"  style='padding-left:0px!important;'>
                             <span  style='font-weight:bold;' t-field="o.beneficiary_bank_name"/>, <span  style='font-weight:bold;' t-field="o.beneficiary_bank_branch"/>, <span  style='font-weight:bold;' t-field="o.beneficiary_bank_address"/>, Swift Code : <span  style='font-weight:bold;' t-field="o.swift_code"/>
                        </div>
                       
                        <div class="col-xs-12" style='padding-left:0px!important;'>
                                <p>Other Trems and Conditions</p>
                                <p  style='font-weight:bold;' t-field="o.note" />
                                <p  style='font-weight:bold; font-size:11px!important;' t-if="o.payment_term.note">
                                    <strong>Payment Term:</strong>
                                    <span t-field="o.payment_term.note"/>
                                </p>
                        </div>
                        
                    </div>


                    <div class="col-xs-6">
                        <h4 style='font-weight:bold;'>Product and Delivery Details</h4>
                            <div class="col-xs-4"  style='padding-left:0px!important;'>
                                    Type :
                            </div>
    
                            <div class="col-xs-8"  style='padding-left:0px!important;'>
                                 <span style='font-weight:bold;' t-field="o.product_type"/>
                            </div>

                            <div class="col-xs-4"  style='padding-left:0px!important;'>
                                    BIN :
                            </div>
    
                            <div class="col-xs-8"  style='padding-left:0px!important;'>
                                 <span style='font-weight:bold;' t-field="o.bin_no"/>
                            </div>

                            <div class="col-xs-4"  style='padding-left:0px!important;'>
                                    Country of Origin :
                            </div>
    
                            <div class="col-xs-8"  style='padding-left:0px!important;'>
                                 <span style='font-weight:bold;' t-field="o.country_of_origin"/>
                            </div>

                            <div class="col-xs-4"  style='padding-left:0px!important;'>
                                    Terms of Delivery :
                            </div>
    
                            <div class="col-xs-8"  style='padding-left:0px!important;'>
                                 <span style='font-weight:bold;' t-field="o.terms_of_delivery"/>
                            </div>

                            <div class="col-xs-4"  style='padding-left:0px!important;'>
                                    Time of Delivery :
                            </div>
    
                            <div class="col-xs-8"  style='padding-left:0px!important;'>
                                 Within <span style='font-weight:bold;' t-field="o.time_of_delivery"/> days form the date of receiving confirm L/C
                            </div>

                            <div class="col-xs-4"  style='padding-left:0px!important;'>
                                    Place of Delivery :
                            </div>
    
                            <div class="col-xs-8"  style='padding-left:0px!important;'>
                                 <span  style='font-weight:bold;' t-field="o.place_of_delivery_name"/>,   <span  style='font-weight:bold;' t-field="o.place_of_delivery_addr"/>
                            </div>

                            <div class="col-xs-4"  style='padding-left:0px!important;'>
                                    Packing :
                            </div>
    
                            <div class="col-xs-8"  style='padding-left:0px!important;'>
                                 Standard Bag Packing <span style='font-weight:bold;' t-field="o.bags_of_packing"/>kgs./bag
                            </div>
                         
                    </div>
            </div>

            <div class="row"> 
                <div class="col-xs-4" style="margin-top:100px!important;;">
                    <img t-attf-src="data:image/*;base64,{{o.signature_image}}" t-att-alt="o.signature" width="200px!important;height:200px !important"/>
                    <p style="border-top:2px solid #000;">Authorized Signature</p>
                    <p  style='font-weight:bold;'>On behalf of <span t-field="o.company_id"/></p>
                </div>
                <div class="col-xs-8"></div>
            </div>    

            <!-- <div class="row">
                <div class="col-xs-4 pull-right">
                    <table class="table table-condensed">
                        <tr class="border-black">
                            <td><strong>Total Without Taxes</strong></td>
                            <td class="text-right">
                                <span t-field="o.amount_untaxed"
                                    t-field-options='{"widget": "monetary", "display_currency": "o.pricelist_id.currency_id"}'/>
                            </td>
                        </tr>
                        <tr>
                            <td>Taxes</td>
                            <td class="text-right">
                                <span t-field="o.amount_tax"
                                    t-field-options='{"widget": "monetary", "display_currency": "o.pricelist_id.currency_id"}'/>
                            </td>
                        </tr>
                        <tr class="border-black">
                            <td><strong>Total</strong></td>
                            <td class="text-right">
                                <span t-field="o.amount_total"
                                    t-field-options='{"widget": "monetary", "display_currency": "o.pricelist_id.currency_id"}'/>
                            </td>
                        </tr>
                    </table>
                </div>
            </div> -->

            <!-- <p t-field="o.note" />
            <p t-if="o.payment_term.note">
                <strong>Payment Term:</strong>
                <span t-field="o.payment_term.note"/>
            </p> -->


            <div class="oe_structure"/>

        </div>
    </t>
</template>

<template id="report_saleorder">
    <t t-call="report.html_container">
        <t t-foreach="doc_ids" t-as="doc_id">
            <t t-raw="translate_doc(doc_id, doc_model, 'partner_id.lang', 'sale.report_saleorder_document')"/>
        </t>
    </t>
</template>
</data>
</openerp>
